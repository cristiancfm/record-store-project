<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.recordstore.controller.ItemController">
    <children>
        <ToolBar>
            <items>
                <Button fx:id="btnItemAdd" mnemonicParsing="false" text="Add..." />
                <Button fx:id="btnItemDelete" mnemonicParsing="false" text="Delete" />
            </items>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </ToolBar>
        <TableView fx:id="tvItems">
            <columns>
                <TableColumn fx:id="colItemId" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="colTitle" prefWidth="75.0" text="Title" />
                <TableColumn fx:id="colItemArtistId" prefWidth="75.0" text="Artist ID" />
                <TableColumn fx:id="colFormat" prefWidth="75.0" text="Format" />
                <TableColumn fx:id="colGenre" prefWidth="75.0" text="Genre" />
                <TableColumn fx:id="colYear" prefWidth="75.0" text="Year" />
                <TableColumn fx:id="colNoUnits" prefWidth="75.0" text="No. Units" />
            </columns>
        </TableView>
    </children>
</VBox>
